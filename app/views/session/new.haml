%h1 Log In

.alert.alert-danger{:role => "alert"}
  %a.alert-link
    = flash[:error] if flash[:error].present?
    = link_to('Not yet a user? Sign Up', new_user_path)

= form_tag login_path do
  %div.form-group
    = label_tag :username
    = text_field_tag :username, nil, :autofocus => true, :class => 'form-control'
  %div.form-group
    = label_tag :password
    = password_field_tag :password, nil, :class => 'form-control'
  %div.form-group
    = submit_tag 'Login', :class => 'btn btn-success'